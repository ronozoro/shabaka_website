<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template name="الشبكة" id="website.owner" page="True" priority="100">
        <t t-call="website.layout">
            <head>
                <meta charset="utf-8"/>
                <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
                <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
                <title>الشبكة</title>
                <link rel="apple-touch-icon" sizes="57x57"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-57x57.png"/>
                <link rel="apple-touch-icon" sizes="60x60"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-60x60.png"/>
                <link rel="apple-touch-icon" sizes="72x72"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-72x72.png"/>
                <link rel="apple-touch-icon" sizes="76x76"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-76x76.png"/>
                <link rel="apple-touch-icon" sizes="114x114"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-114x114.png"/>
                <link rel="apple-touch-icon" sizes="120x120"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-120x120.png"/>
                <link rel="apple-touch-icon" sizes="144x144"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-144x144.png"/>
                <link rel="apple-touch-icon" sizes="152x152"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-152x152.png"/>
                <link rel="apple-touch-icon" sizes="180x180"
                      href="/shabaka_website/static/src/img/favicons/apple-touch-icon-180x180.png"/>
            </head>
            <body>
                <div id="search">
                    <div class="u-photo-form u-ml30">
                        <input class="input is-main is-md" type="text"/>
                        <input class="button" type="submit" value="بحث"/>
                    </div>
                    <div class="is-like is-close">
                        <input type="submit"/>
                        <svg class="icon  icon--close">
                            <use href="/shabaka_website/static/src/img/sprite/sprite.svg#close"></use>
                        </svg>
                    </div>
                </div>
                <div class="wrapper-lg">
                    <div class="container">
                        <div class="header avatar-content">
                            <div class="avatar-box">
                                <div class="avatar-img">
                                    <img src="/shabaka_website/static/src/img/avatar-two.png" alt=""/>
                                </div>
                                <h2 class="u-black u-large">احمد مراد</h2>
                                <p class="date">2017 - 1999</p>
                            </div>
                        </div>
                        <div class="content">
                            <h4 class="u-black u-large u-mb5">مؤلفاته</h4>
                            <div class="content">
                                <div class="item">
                                    <article class="Card Card--offer Card--offer-two">
                                        <figure class="Card-header">
                                            <a href="javascript:void(0)">
                                                <img class="Card-thumb equal-offer"
                                                     src="/shabaka_website/static/src/img/book/0.png"
                                                     alt="book"/>
                                            </a>
                                        </figure>
                                        <div class="Card-body">
                                            <h4>موسم صيد الغزلان</h4>
                                            <p>2017</p>
                                            <p>الشبكة العربية للأبحاث والنشر</p>
                                        </div>
                                        <div class="Card-btns">
                                            <a class="button is-main is-md u-ml0" href="javascript:void(0)"
                                               title="add">أضف إلى السلة
                                            </a>
                                        </div>
                                    </article>
                                </div>
                                <div class="item">
                                    <article class="Card Card--offer Card--offer-two">
                                        <figure class="Card-header">
                                            <a href="javascript:void(0)">
                                                <img class="Card-thumb equal-offer"
                                                     src="/shabaka_website/static/src/img/book/1.png"
                                                     alt="book"/>
                                            </a>
                                        </figure>
                                        <div class="Card-body">
                                            <h4>مائة عام من العزلة</h4>
                                            <p>2017</p>
                                            <p>الشبكة العربية للأبحاث والنشر</p>
                                        </div>
                                        <div class="Card-btns">
                                            <a class="button is-main is-md u-ml0" href="javascript:void(0)"
                                               title="add">أضف إلى السلة
                                            </a>
                                        </div>
                                    </article>
                                </div>
                                <div class="item">
                                    <article class="Card Card--offer Card--offer-two">
                                        <figure class="Card-header">
                                            <a href="javascript:void(0)">
                                                <img class="Card-thumb equal-offer"
                                                     src="/shabaka_website/static/src/img/book/2.png"
                                                     alt="book"/>
                                            </a>
                                        </figure>
                                        <div class="Card-body">
                                            <h4>تراب الماس</h4>
                                            <p>2017</p>
                                            <p>الشبكة العربية للأبحاث والنشر</p>
                                        </div>
                                        <div class="Card-btns">
                                            <a class="button is-main is-md u-ml0" href="javascript:void(0)"
                                               title="add">أضف إلى السلة
                                            </a>
                                        </div>
                                    </article>
                                </div>
                                <div class="item">
                                    <article class="Card Card--offer Card--offer-two">
                                        <figure class="Card-header">
                                            <a href="javascript:void(0)">
                                                <img class="Card-thumb equal-offer"
                                                     src="/shabaka_website/static/src/img/book/3.png"
                                                     alt="book"/>
                                            </a>
                                        </figure>
                                        <div class="Card-body">
                                            <h4>قواعد العشق الاربعون</h4>
                                            <p>2017</p>
                                            <p>الشبكة العربية للأبحاث والنشر</p>
                                        </div>
                                        <div class="Card-btns">
                                            <a class="button is-main is-md u-ml0" href="javascript:void(0)"
                                               title="add">أضف إلى السلة
                                            </a>
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </body>
        </t>
    </template>

    <record id="owner_page_link" model="website.menu">
        <field name="name">owner</field>
        <field name="url">/page/owner</field>
        <field name="website_id" ref="website.default_website"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
    </record>
</odoo>